}
.myWork{
  width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}


.searchs{
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: center;
}
.search{
  width: 90%;
  height: 25rpx;
  border: solid 2rpx #efefef;
  border-radius: 30rpx;
  color: #efefef;
  margin: 0 auto;
  font-size: 30rpx;
}
.header{
  width: 100%;
  height: 60rpx;
  border: 2rpx solid #efefef;
  font-size: 30rpx;
  margin: 0 auto;

}
.site{
  width: 100rpx;
  height: 50rpx;
  border: solid 2rpx black;
  position: absolute;
  right: 20rpx;
  text-align: center;
  line-height: 50rpx;
}
.recommend{
  width: 50%;
  float: left;
  text-align: center;
  line-height: 60rpx;
}
.recommend a{
  color: black
}
.company{
  width: 50%;
  float: left;
  text-align: center;
  line-height: 60rpx;
}
.company a{
  color: #f88233;
}
.corporation{
  width: 100%;
  height: 100%;
  flex: 1;
  background: #f4f4f4;
  overflow: auto;
  
}
.JDcom{
  width: 100%;
  height: 216rpx;
  background: #fff;
  margin-bottom:40rpx; 
}
.img{
  width: 72rpx;
  height: 68rpx;
  float: left;
  border: solid 2rpx #ececec;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.img image{
  width: 72rpx;
  height: 68rpx;
}
.right{
  width: 83%;
  height: 216rpx;
  float: right;
}
.right text{
  display: block;
  line-height: 55rpx;
}
.grey{
  width: 116rpx;
  height: 36rpx;
  background-color: #f6f6f6;
  font-size: 25rpx;
  text-align: center;
